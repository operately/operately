---
import Layout from "@/layouts/Layout.astro";
import { ProgressBar } from "turboui";
import type { ProgressBarStatus, ProgressBarSize } from "turboui";

// Status variations
const statuses: { name: string; value: ProgressBarStatus }[] = [
  { name: "On Track", value: "on_track" },
  { name: "Completed", value: "completed" },
  { name: "Achieved", value: "achieved" },
  { name: "Paused", value: "paused" },
  { name: "Dropped", value: "dropped" },
  { name: "Caution", value: "caution" },
  { name: "Partial", value: "partial" },
  { name: "Issue", value: "issue" },
  { name: "Missed", value: "missed" },
  { name: "Pending", value: "pending" },
];

// Size variations
const sizes: { name: string; value: ProgressBarSize }[] = [
  { name: "Small", value: "sm" },
  { name: "Medium", value: "md" },
  { name: "Large", value: "lg" },
];

// Progress variations
const progressValues = [0, 25, 50, 75, 100];
---

<Layout title="Progress Bar Component">
  <div id="root">
    <div class="flex flex-col h-dvh">
      <div class="flex-1 overflow-y-auto">
        <div>
          <div class="mx-auto relative sm:my-10 max-w-4xl">
            <div
              class="bg-surface-dimmed flex items-center flex-wrap justify-center gap-1 pt-2 pb-1 mx-0 sm:mx-10 font-semibold rounded-t border-b sm:border-b-0 sm:border-t sm:border-x border-surface-outline"
            >
              <a
                class="cursor-pointer transition-colors underline underline-offset-2 text-link-base hover:text-link-hover"
                href="/"><span class="flex items-center gap-1.5">Lobby</span></a
              ><div class="shrink-0">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="tabler-icon tabler-icon-slash"
                  ><path d="M17 5l-10 14"></path></svg
                >
              </div><a
                class="cursor-pointer transition-colors underline underline-offset-2 text-link-base hover:text-link-hover"
                href="/design-system/"
                ><span class="flex items-center gap-1.5">Design System</span></a
              >
            </div>
            <div
              class="relative bg-surface-base px-12 py-10 min-h-dvh sm:min-h-0 sm:border sm:border-surface-outline sm:rounded-lg sm:shadow-xl"
            >
              <div class="flex items-center justify-between mb-6">
                <div>
                  <div
                    class="text-content-accent text-lg md:text-2xl font-extrabold"
                  >
                    Progress Bar Component
                  </div>
                </div><div></div>
              </div>
              
              <div class="mt-2 mb-10">
                Progress bars are used to visually represent the completion percentage of items like goals, projects, tasks, etc.
              </div>

              <h3 class="font-bold mt-12 text-lg text-content-accent">
                Status Variations
              </h3>
              <p class="text-content-base text-sm mb-4">
                The progress bar color changes based on status. Below are examples of each status with 50% progress.
              </p>

              <div
                class="p-6 border border-surface-outline rounded-lg mb-8 bg-surface-base"
              >
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                  {statuses.map((status) => (
                    <div class="p-4 border rounded-lg">
                      <h3 class="text-lg font-medium mb-2">{status.name}</h3>
                      <ProgressBar progress={50} status={status.value} />
                    </div>
                  ))}
                </div>
              </div>

              <h3 class="font-bold mt-12 text-lg text-content-accent">
                Size Variations
              </h3>
              <p class="text-content-base text-sm mb-4">
                Progress bars come in three sizes: small, medium (default), and large.
              </p>

              <div
                class="p-6 border border-surface-outline rounded-lg mb-8 bg-surface-base"
              >
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                  {sizes.map((size) => (
                    <div class="p-4 border rounded-lg">
                      <h3 class="text-lg font-medium mb-2">{size.name}</h3>
                      <ProgressBar progress={70} status="on_track" size={size.value} />
                    </div>
                  ))}
                </div>
              </div>

              <h3 class="font-bold mt-12 text-lg text-content-accent">
                Progress Values
              </h3>
              <p class="text-content-base text-sm mb-4">
                Examples of different progress percentages with the same status.
              </p>

              <div
                class="p-6 border border-surface-outline rounded-lg mb-8 bg-surface-base"
              >
                <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-4">
                  {progressValues.map((value) => (
                    <div class="p-4 border rounded-lg">
                      <h3 class="text-lg font-medium mb-2">{value}% Progress</h3>
                      <ProgressBar progress={value} status="on_track" />
                    </div>
                  ))}
                </div>
              </div>

              <h3 class="font-bold mt-12 text-lg text-content-accent">
                With Percentage Label
              </h3>
              <p class="text-content-base text-sm mb-4">
                Progress bars can optionally display the percentage value.
              </p>

              <div
                class="p-6 border border-surface-outline rounded-lg mb-8 bg-surface-base"
              >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="p-4 border rounded-lg">
                    <h3 class="text-lg font-medium mb-2">Without Label (Default)</h3>
                    <ProgressBar progress={65} status="on_track" />
                  </div>
                  <div class="p-4 border rounded-lg">
                    <h3 class="text-lg font-medium mb-2">With Label</h3>
                    <ProgressBar progress={65} status="on_track" showLabel={true} />
                  </div>
                </div>
              </div>

              <h3 class="font-bold mt-12 text-lg text-content-accent">
                Comprehensive Examples
              </h3>
              <p class="text-content-base text-sm mb-4">
                Examples combining different props for common use cases.
              </p>

              <div
                class="p-6 border border-surface-outline rounded-lg mb-8 bg-surface-base"
              >
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6">
                  <div class="p-4 border rounded-lg">
                    <h3 class="text-lg font-medium mb-2">On Track - Large with Label</h3>
                    <ProgressBar progress={78} status="on_track" size="lg" showLabel={true} />
                  </div>
                  <div class="p-4 border rounded-lg">
                    <h3 class="text-lg font-medium mb-2">Caution - Medium with Label</h3>
                    <ProgressBar progress={43} status="caution" showLabel={true} />
                  </div>
                  <div class="p-4 border rounded-lg">
                    <h3 class="text-lg font-medium mb-2">Issue - Small</h3>
                    <ProgressBar progress={22} status="issue" size="sm" />
                  </div>
                  <div class="p-4 border rounded-lg">
                    <h3 class="text-lg font-medium mb-2">Completed - 100%</h3>
                    <ProgressBar progress={100} status="completed" showLabel={true} />
                  </div>
                  <div class="p-4 border rounded-lg">
                    <h3 class="text-lg font-medium mb-2">Paused - 50%</h3>
                    <ProgressBar progress={50} status="paused" showLabel={true} />
                  </div>
                </div>
              </div>

              <h3 class="font-bold mt-12 text-lg text-content-accent">
                Usage
              </h3>
              <p class="text-content-base text-sm mb-4">
                How to use the ProgressBar component in your code.
              </p>
              <div
                class="p-6 border border-surface-outline rounded-lg mb-8 bg-surface-base"
              >
                <pre class="text-sm bg-gray-800 text-gray-200 p-4 rounded overflow-x-auto">
{`// Import the component
import { ProgressBar } from "turboui";

// Basic usage
<ProgressBar progress={75} status="on_track" />

// With size variation
<ProgressBar progress={50} status="caution" size="lg" />

// With percentage label
<ProgressBar progress={100} status="completed" showLabel={true} />

// All props combined
<ProgressBar
  progress={65}
  status="pending"
  size="sm"
  showLabel={true}
/>`}
                </pre>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
