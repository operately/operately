<%= title("#{short_name(@author)} updated the description for \"#{@milestone_name}\"") %>

<%= spacer() %>

<%= if @description do %>
  <%= row do %>
    <%= rich_text(@description) %>
  <% end %>
<% else %>
  <%= row do %>
    The description was cleared.
  <% end %>
<% end %>

<%= spacer() %>

<%= row do %>
  <%= cta_button(@cta_url, "View Milestone") %>
<% end %>
