<%= title("#{short_name(@author)} closed the #{@goal.name} goal") %>

<%= spacer() %>

<%= row do %>
  <%= if @success == "yes" do %>
    Marked as accomplished
  <% else %>
    Marked as not accomplished
  <% end %>
<% end %>

<%= spacer() %>

<%= row do %>
  <%= rich_text(@message) %>
<% end %>

<%= spacer() %>

<%= row do %>
  <%= cta_button(@link, "Discuss") %>
<% end %>
