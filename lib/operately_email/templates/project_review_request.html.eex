<html>
  <head>
    <title><%= @title %></title>
    <style>
      body {
        font-family: sans-serif;
      }

      h1 {
        font-size: 18px;
        margin-bottom: 20px;
        font-weight: bold;
      }
    </style>
  </head>

  <body>
    <div style="padding: 10px 20px;">
      <table width="100%" style="background:#fff;margin:0;padding:0;border:0;border-collapse:collapse;border-spacing:0; max-width: 40em">
        <tr style="font-size: 22px; font-family: sans-serif; font-weight: 800;">
          <td>
            <%= @author %> requested an impromptu review of the <%= @project.name %> project.
          </td>
        </tr>

        <tr style="height: 20px">
          <td></td>
        </tr>

        <tr style="height: 20px">
          <td>
            <%= Prosemirror2Html.convert(@request.content) %>
          </td>
        </tr>

        <tr style="height: 20px">
          <td><%= cta_button(@cta_url, "View Request") %></td>
        </tr>
      </table>
    </div>
  </body>
</html>
