<html>
  <head>
    <title><%= @title %></title>
    <style>
      body {
        font-family: sans-serif;
      }

      h1 {
        font-size: 18px;
        margin-bottom: 20px;
        font-weight: bold;
      }
    </style>
  </head>

  <body>
    <div style="padding: 10px 20px;">
      <table width="100%" style="background:#fff;margin:0;padding:0;border:0;border-collapse:collapse;border-spacing:0; max-width: 40em">
        <tr style="font-size: 22px; font-family: sans-serif; font-weight: 800;">
          <td>
            <%= Person.short_name(@author) %> created the <a href="<%= @url %>"><%= @project.name %></a> project in Operately
          </td>
        </tr>

        <tr style="height: 20px">
          <td></td>
        </tr>

        <tr style="font-size: 16px; font-family: sans-serif;">
          <td>- You are the <%= @role %></td>
        <tr>

        <%= if @author_role do %>
          <tr style="font-size: 16px; font-family: sans-serif;">
            <td>- <%= Person.short_name(@author) %> is a <%= @author_role %></td>
          <tr>
        <% end %>

        <tr style="height: 20px">
          <td></td>
        </tr>

        <tr style="height: 20px">
          <td><%= cta_button(@url, "View Project in Operately") %></td>
        </tr>
      </table>
    </div>
  </body>
</html>
